<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    a:id="@+id/drawer_layout_main"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent"
    tools:openDrawer="start" >

    <include
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        layout="@layout/app_bar_main" />

    <com.czm.xcrecyclerview.XCRecyclerView
        a:id="@+id/recycler_view_menu"
        a:layout_width="310dp"
        a:layout_height="match_parent"
        a:layout_gravity="start"
        a:background="#FFFFFF" />

</android.support.v4.widget.DrawerLayout>